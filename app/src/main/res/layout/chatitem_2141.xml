<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/univ_search_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/messageLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:background="@color/univ_search_gray"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/leftMessageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:background="@color/univ_search_gray" >

            <LinearLayout
                android:id="@+id/photoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="3dip"
                    android:layout_marginBottom="3dip"
                    android:background="@drawable/cha"
                    android:gravity="top"
                    android:scrollbars="none"
                    android:src="@drawable/cha" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="22dp" >

                    <TextView
                        android:id="@+id/messageName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="4dip"
                        android:singleLine="true"
                        android:text="성명"
                        android:textColor="@color/colorAccent"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/leftMessageDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/leftdateborder"
                        android:text="메시지 시각"
                		android:textColor="#ff787878"
                        android:textSize="10sp"
                        android:typeface="sans" />
                </LinearLayout>

                <TextView
                    android:id="@+id/leftMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="3dip"
                    android:background="@drawable/leftborder"
                    android:text="메시지"
                    android:textColor="#ff787878"
                    android:typeface="sans" />

                <FrameLayout
                    android:id="@+id/leftPhotoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="3dip"
                    android:background="@drawable/rounded_edges" >

                    <ImageView
	                    android:id="@+id/leftPhoto"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/rounded_edges"
                        android:layout_gravity="top"
	                    android:src="@drawable/no_image" />
                    

                    <LinearLayout
	                    android:id="@+id/leftSubPhotoLayout"
	                	android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical" 
                        android:layout_gravity="top">
	                </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightMessageLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/univ_search_gray"
            android:gravity="right|clip_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rightMessageDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/rightdateborder"
                    android:text="메시지 시각"
                    android:textColor="#ff787878"
                    android:textSize="10sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/rightMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dip"
                    android:background="@drawable/rightborder"
                    android:text="메시지"
                    android:textColor="#ff787878"
                    android:typeface="sans" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/rightPhoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dip"
                android:background="@drawable/cha">


                <LinearLayout
                    android:id="@+id/rightSubPhotoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

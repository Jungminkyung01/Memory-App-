<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/univ_search_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/InputTimeItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="5dip" 
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/orderborder"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/CorpListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이디 : "
                        android:textColor="#ff000000"
                        android:typeface="sans"  />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="성명"
                        android:textColor="#ff000000"
                        android:typeface="sans" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="("
                        android:textColor="#ff000000"
                        android:typeface="sans" />
                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="ID"
                        android:textColor="#ff000000"
                        android:typeface="sans" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=")"
                        android:textColor="#ff000000"
                        android:typeface="sans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포인트 : "
                        android:textColor="#ff000000"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="none"
                        android:text="포인트"
                        android:textColor="#ffBB6565"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입금자 : "
                        android:textColor="#ff000000"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/inputName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="none"
                        android:text="신청자"
                        android:textColor="#ffCCCCCC"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입금시각 : "
                        android:textColor="#ff000000"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/inputTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="none"
                        android:text="신청시각"
                        android:textColor="#ffCCCCCC"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="접수상태 : "
                        android:textColor="#ff000000"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/checkOk"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="none"
                        android:text="확인여부"
                        android:textColor="#ffCCCCCC"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요청시각 : "
                        android:textColor="#ff000000"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/insertDate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:ellipsize="none"
                        android:text="작성일자"
                        android:textColor="#ffCCCCCC"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/managerLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/okBtn"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="승인" />

                <Button
                    android:id="@+id/waitBtn"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="대기" />

                <Button
                    android:id="@+id/delBtn"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="삭제" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
